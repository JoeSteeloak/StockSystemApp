@model IEnumerable<StockSystemApp.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<link href="~/css/home.css" rel="stylesheet" type="text/css" />

<h1>Welcome to Our Stock Management System</h1>

<p>This web application is designed to help you efficiently manage products, categories, and deliveries. Built with <em>ASP.NET MVC</em> and <em>Identity</em> for authentication, it ensures secure access and user management.<br><br>

The <em>homepage is the only publicly accessible page</em>, allowing visitors to browse all available products. However, to make any changes—such as adding, editing, or managing stock—you need to log in.<br><br>

Use the navigation to explore the product list, and sign in to access full functionality.</p>

@if (Model != null && Model.Any())
{
    <div class="category-table">
        @foreach (var categoryGroup in Model.GroupBy(p => p.Category.Name))
        {
            <h2>@categoryGroup.Key</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in categoryGroup)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Stock</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}
else
{
    <p>No products available.</p>
}
